generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id                    BigInt    @id @default(autoincrement())
  telegram_chat_id      String?   @unique(map: "users_telegram_chat_id_unique") @db.VarChar(255)
  risk_tolerance        Decimal   @default(5) @db.Decimal(3, 1)
  min_confidence        Int       @default(70)
  notifications_enabled Boolean   @default(true)
  last_login_at         DateTime? @db.Timestamp(0)
  created_at            DateTime? @db.Timestamp(0)
  updated_at            DateTime? @db.Timestamp(0)

  @@index([telegram_chat_id], map: "users_telegram_chat_id_index")
}
